<div class="container">

  <img src="./assets/image/burger.png" alt="burger">

<h1>Eat the Burger!</h1>
<div class="notDevoured">
<h2>Burgers to be Devoured!</h2>

<ul class="dev">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>


<div class="devoured">
<h2>Burgers Already Devoured:</h2>

<ul class="notDev">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
